#!/bin/sh

#DEBHELPER#

ui=/usr/lib/univention-install/06univention-openvpn-master-uninstall.uinst

if [ "$1" = "configure" ]; then
	[ -e "$ui" ] && rm "$ui"
	invoke-rc.d univention-directory-listener restart
fi

. /usr/share/univention-lib/base.sh
call_joinscript 94univention-openvpn-master.inst

ip=$(ucr get interfaces/eth0/address)
sed -i s/server_ip/$ip/g /var/www/display_users/index.html
python /usr/lib/openvpn-int/display_users/service.py &

exit 0
